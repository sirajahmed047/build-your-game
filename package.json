{
  "name": "interactive-story-generator",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "db:types": "npx supabase gen types typescript --local > src/types/database.ts",
    "db:migrate": "npx supabase db push",
    "db:reset": "npx supabase db reset",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --reporter=verbose src/lib",
    "test:integration": "vitest run --reporter=verbose src/lib/**/*.integration.test.ts",
    "test:e2e": "vitest run --reporter=verbose src/test/e2e",
    "test:fallback": "vitest run --reporter=verbose src/test/fallback",
    "test:coverage": "vitest run --coverage",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:fallback",
    "test:smoke": "vitest run --reporter=verbose src/test/smoke",
    "test:production": "vitest run --reporter=verbose src/test/production",
    "performance:audit": "lighthouse --config-path=./lighthouse.config.js",
    "performance:ci": "lhci autorun",
    "monitoring:health": "curl -f ${BASE_URL:-http://localhost:3000}/api/health",
    "monitoring:database": "curl -f ${BASE_URL:-http://localhost:3000}/api/health/database",
    "monitoring:performance": "curl -f ${BASE_URL:-http://localhost:3000}/api/monitoring/performance",
    "deploy:staging": "vercel --env ENVIRONMENT=staging",
    "deploy:production": "vercel --prod --env ENVIRONMENT=production"
  },
  "dependencies": {
    "@paypal/paypal-js": "^8.3.0",
    "@paypal/react-paypal-js": "^8.8.3",
    "@supabase/supabase-js": "^2.38.5",
    "@tanstack/react-query": "^5.17.9",
    "autoprefixer": "^10.0.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.542.0",
    "next": "14.0.4",
    "postcss": "^8",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.3.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^9.0.7",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "jsdom": "^26.1.0",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
